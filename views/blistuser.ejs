<body>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>

<div class="container">
    <div class="row">

    <p></p>
    <h1>공지사항 게시판</h1>
    <p>&nbsp;</p><p>&nbsp;</p>

        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
              <div class="panel-heading">
                <div class="row">
                  <div class="col col-xs-6">
                    <h3 class="panel-title">공지사항</h3>
                  </div>
                  <div class="col col-xs-6 text-right">

                    <a href="/welcome"  class="btn btn-sm btn-primary btn-create">뒤로가기</a>
                  </div>
                </div>
              </div>
              <div class="panel-body">
                <table class="table table-striped table-bordered table-list">
                  <thead>
                    <tr>
                        <th class="hidden-xs">글번호</th>
                        <th>작성자</th>
                        <th>제목</th>
                        <th>조회수</th>
                        <th>작성일</th>
                    </tr>
                  </thead>


                  <tbody>
                    <%
                         for(var i=leng-((page*page_num)-page_num); i>leng-(page*page_num); i--)
                         {
                           if(i<0){
                             break;
                           }else{
                               var oneItem = rows[i];


                    %>
                          <tr>
                            <td><%=oneItem.idx%></td>
                            <td><%=oneItem.creator_id%></td>
                            <td><a href="/board/read/<%=oneItem.idx%>"><%=oneItem.title%></a></td>
                            <td><%=oneItem.hit%></td>
                            <td><%=oneItem.modidate%></td>
                          </tr>
                          <%
                               }
                             }
                          %>
                        </tbody>
                </table>

              </div>
              <div class="panel-footer">

                <div class="row">

                  <div class="col col-xs-4">Page
                  </div>

                  <div class="col col-xs-8">
                    <%
                    for(var j=0;j<rows.length/8;j++){%>
                    <ul class="pagination hidden-xs pull-right">
                      <li><a href="/board/blistuser/<%=j+1%>"><%=j+1 %></a></li>
                    </ul>
                    <%  }
                      %>
                    <ul class="pagination visible-xs pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>

                  </div>

                </div>

              </div>
            </div>

</div></div></div>

<script type="text/javascript">

</script>
</body>
</html>
